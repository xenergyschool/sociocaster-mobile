.pull-post
    background-color: darken($color7,10%)
    color: darken($color3,25%)
    font-weight: $bold

.post-page 
    .page__background
        background-color: lighten($color0,20%)

.post-wrap__switch-post
    font-size: 24px
    font-weight: $bold
    text-align: center
    display: block
    margin: 15px auto

.date-row
    padding: 10px

.date-row__label
    color: $color3
    font-size: 18px
    font-weight: $bold
    text-align: center
    margin-top:-5px
    margin-bottom: 5px

.post-box
    background: $color9
    width: 80%
    margin: 0 auto 20px
    border: solid 1px
    border-color: darken($color5,5%) darken($color5,7%) darken($color5,13%)
    padding: 25px 15px
    border-radius: 5px

.post-box__msg
    color: darken($color3,10%)
    margin: 0 0 15px
    border-bottom: solid 1px $color5
    padding-bottom: 15px

.post-box__time
    color: $color13
    font-size: 12px

.post-box__link-wrap
    width:100%
    height:140px
    display: block
    overflow: hidden
    position: relative
    margin-bottom: 15px

.post-box__link-picture
    display: block
    width: 100%
    position: absolute
    height: auto
    top: 0
    left: 0
    right: 0
    bottom: 0
    margin: auto

.post-box__link-caption, .post-box__link-description
    display: block

.post-box__link-caption
    color: $color13
    margin-bottom: 10px

.post-box__link-description
    color: $color3
    margin: 0 0 15px
    border-bottom: solid 1px $color5
    padding-bottom: 15px

.post-filter
    h3
        margin: 10px 0 15px
        text-align: center
        color: $color3
    .list__item
        padding:0
        
        color: $color2
        .list__item__center
            display: block
            text-align: center

.no-post
    margin: 15px auto 30px
    width:90%
    display: block
    background: $color9
    padding:5px
    border: solid 1px
    border-color: darken($color5,5%) darken($color5,7%) darken($color5,13%)

.no-post__msg
    color: $color3
    text-align:center

.account-list__item
    width: 40px
    height: 40px
    display: inline-block
    overflow: hidden
    border-radius: 100%
    position: relative
    margin: 0 5px

.account-list__image
    width:100%
    height:auto
    position: absolute
    top:0
    left:0
    right:0
    bottom: 0
    margin: auto
    border:solid 1px $color5

.account-list__icon
    position: absolute
    right: 0
    bottom: 0

.account-list__add-account
    font-size: 20px
    color:$color1
    text-align: center
    border:solid 1px $color1

.add-account__icon
    padding:10px 0

.icon-twitter
    color: $color1

.post-creator__header
    position: relative
    padding:10px 15px

.post-creator__close
    position: absolute
    top: 5px
    right: 5px

.post-creator__textarea
    border: none
    width:91.55%
    max-height: 400px
    padding:7px 15px
    margin:10px 0
    color: $color3
    font-size: 16px

.post-creator__label
    margin: 0 0 15px

.post-creator__link
    display: inline-block
    margin: 0 7px
    padding:13px 0

.post-creator__footer
    position: absolute
    left:0
    bottom:0
    width:100%
    height:50px
    border-top: solid 1px $color5