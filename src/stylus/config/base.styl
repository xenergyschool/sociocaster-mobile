// Color Scheme
$color1 = #2EB2FF
$color2 = #2980B9
$color3 = #777
// Font weights
$light= 100
$regular= 400
$bold= 600
// Base Font
$base-font-family= 'Open Sans'
$base-font-weight= $regular
$base-font-size= 13px
$base-line-height= 1.4
'FjallaOne-Regular'
// Fixed Font
$fixed-font-family= monospace
$fixed-font-size= 85%
$fixed-line-height= 1.4

a 
    color: $color1;
    text-decoration: none;
    cursor: pointer;
    &:hover,
    &:focus,
    &:active 
        text-decoration: none;
        outline: 0 none;
        color: $color2

.text-center
    text-align: center